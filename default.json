{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)",
    ":timezone(Europe/Dublin)",
    "helpers:pinGitHubActionDigests"
  ],
  "rebaseWhen": "conflicted",
  "rangeStrategy": "bump",
  "dependencyDashboard": true,
  "labels": ["dependencies"],
  "prConcurrentLimit": 20,
  "prHourlyLimit": 10,
  "platformAutomerge": false,
  "automergeStrategy": "squash",

  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "pin", "digest", "minor"],
      "automerge": true,
      "automergeType": "pr",
      "prBodyNotes": ["Auto-merged by preset (patch/pin/digest/minor)."]
    },
    {
      "matchManagers": ["gomod"],
      "postUpdateOptions": ["gomodTidy"]
    },
    {
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["minor"],
      "automerge": true,
      "automergeType": "pr",
      "prBodyNotes": ["Auto-merged by preset (gomod minor)."]
    },
    {
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchManagers": ["dockerfile", "docker-compose"],
      "matchUpdateTypes": ["digest"],
      "groupName": "Docker digests"
    },
    {
      "matchManagers": ["npm", "pnpm", "yarn"],
      "matchUpdateTypes": ["minor"],
      "stabilityDays": 3
    },
    {
      "matchUpdateTypes": ["security"],
      "automerge": true,
      "automergeType": "pr",
      "prPriority": 1
    },
    {
      "matchUpdateTypes": ["minor", "major"],
      "automerge": false
    },
    {
      "matchUpdateTypes": ["major"],
      "draftPR": true,
      "prBodyNotes": ["Draft because this is a major update."]
    }
  ]
}
