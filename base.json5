{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)",
    ":timezone(Europe/Dublin)"
  ],

  "schedule": ["before 6am on monday"],
  "rebaseWhen": "conflicted",

  "platformAutomerge": true,
  "automergeStrategy": "squash",

  // Donâ€™t limit managers unless needed; Renovate auto-detects
  // If you *do* want to lock it down, re-add enabledManagers.
  // "enabledManagers": ["dockerfile", "gomod", "docker-compose", "npm"],

  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "pin", "digest"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["minor"],
      "automerge": true,
      "automergeType": "pr"
    }
  ]
}
